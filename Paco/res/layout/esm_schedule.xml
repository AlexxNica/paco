<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/ScrollView01"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="left">
    <TextView
      android:layout_gravity="center"
      android:textStyle="bold"
      android:textSize="25dip"
      android:id="@+id/experimentNameSchedule"
      android:layout_height="wrap_content"
      android:text="Experiment name"
      android:layout_width="wrap_content"></TextView>
    <TextView
      android:layout_gravity="left"
      android:layout_marginLeft="4dip"
      android:layout_marginBottom="7dip"
      android:textSize="20dip"
      android:id="@+id/TextView03"
      android:layout_height="wrap_content"
      android:text="Suggested signalling schedule:"
      android:layout_width="wrap_content"></TextView>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_gravity="left"
      android:gravity="center"
      android:layout_margin="1dip">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dip"
        android:id="@+id/experimentPeriodLabel"
        android:text="Schedule Period:  "
        android:gravity="left" />
      <Spinner
        android:layout_height="wrap_content"
        android:textSize="10dip"
        android:layout_gravity="right"
        android:id="@+id/experimentEsmPeriod"
        android:text="week"
        android:layout_width="100dip" />
    </LinearLayout>


    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_gravity="left"
      android:gravity="center"
      android:layout_margin="1dip">
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dip"
        android:id="@+id/experimentFrequencyLabel"
        android:text="Times per period:"
        android:gravity="left|center_vertical" />
      <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dip"
        android:minWidth="40dip"
        android:id="@+id/experimentEsmFrequency"
        android:text=""
        android:layout_gravity="right|center_vertical" />
    </LinearLayout>
    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_gravity="left"
      android:gravity="center"
      android:layout_margin="1dip"
      android:padding="1dip">
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dip"
        android:id="@+id/experimentFrequencyLabel"
        android:text="Weekends?"
        android:layout_gravity="left|center_vertical" />
      <CheckBox
        android:text=""
        android:id="@+id/weekendsCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical" />
    </LinearLayout>
    <LinearLayout
      android:layout_width="wrap_content"
      android:gravity="center"
      android:layout_gravity="left"
      android:orientation="horizontal"
      android:layout_height="wrap_content"
      android:layout_margin="1dip"
      android:padding="1dip">
      <TextView
        android:textSize="20dip"
        android:id="@+id/TextView02"
        android:text="Start Hour:  "
        android:layout_width="wrap_content"
        android:layout_gravity="left|bottom"
        android:layout_height="wrap_content" />
      <Button
        android:textSize="20dip"
        android:text="9:30am"
        android:layout_width="wrap_content"
        android:layout_gravity="left|bottom"
        android:layout_height="wrap_content"
        android:id="@+id/startHourTimePickerLabel" />
    </LinearLayout>

    <LinearLayout
      android:layout_width="wrap_content"
      android:gravity="center"
      android:layout_gravity="left"
      android:orientation="horizontal"
      android:layout_height="wrap_content"
      android:padding="1dip"
      android:layout_margin="1dip">
      <TextView
        android:textSize="20dip"
        android:id="@+id/TextView01"
        android:text="End Hour:   "
        android:layout_width="wrap_content"
        android:layout_gravity="left|bottom"
        android:layout_height="wrap_content" />
      <Button
        android:textSize="20dip"
        android:text="5:30am"
        android:layout_width="wrap_content"
        android:layout_gravity="left|bottom"
        android:layout_height="wrap_content"
        android:id="@+id/endHourTimePickerLabel" />
    </LinearLayout>
    <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/SetDailyScheduleButton"
      android:text="Save Schedule"
      android:layout_gravity="center"></Button>



  </LinearLayout>
</ScrollView>
